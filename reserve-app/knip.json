{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/page.tsx!",
    "src/app/**/layout.tsx!",
    "src/app/api/**/route.ts!"
  ],
  "project": [
    "src/**/*.ts!",
    "src/**/*.tsx!"
  ],
  "ignore": [
    "src/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ignoreDependencies": [
    "tailwindcss",
    "dotenv-cli",
    "msw",
    "postcss"
  ],
  "next": {
    "entry": [
      "next.config.{js,ts,mjs}",
      "src/app/**/page.tsx",
      "src/app/**/layout.tsx",
      "src/app/api/**/route.ts"
    ]
  },
  "rules": {
    "files": "warn",
    "dependencies": "warn",
    "devDependencies": "off",
    "unlisted": "warn",
    "exports": "warn",
    "types": "warn",
    "duplicates": "error"
  }
}
