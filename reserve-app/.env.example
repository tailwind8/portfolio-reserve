# ========================================
# Database Configuration
# ========================================
# Supabase PostgreSQL connection URL
# Format: postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Direct connection URL (for migrations)
# Use this for Prisma migrations instead of pooled connection
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"


# ========================================
# Supabase Configuration (New API Keys - 2025)
# ========================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT_REF/settings/api

# Project URL
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"

# Publishable key (safe to use in browser - replaces anon key)
# Format: sb_publishable_...
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="YOUR_SUPABASE_PUBLISHABLE_KEY"

# Secret key (NEVER expose to client! - replaces service_role key)
# Format: sb_secret_...
SUPABASE_SECRET_KEY="YOUR_SUPABASE_SECRET_KEY"

# ========================================
# Legacy API Keys (if using older Supabase project)
# ========================================
# Only use these if your project still has legacy keys
# NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"
# SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"


# ========================================
# Application Configuration
# ========================================
# Tenant ID for this restaurant (for multi-portfolio support)
NEXT_PUBLIC_TENANT_ID="demo-restaurant"

# Base URL for the application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"


# ========================================
# Email Configuration (Resend)
# ========================================
# For sending reservation confirmation emails
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_YOUR_RESEND_API_KEY"
# Email sender address (must be verified in Resend)
RESEND_FROM_EMAIL="noreply@yourstore.com"


# ========================================
# Development Configuration
# ========================================
NODE_ENV="development"


# ========================================
# CI/CD Configuration (GitHub Actions)
# ========================================
# These are automatically set in GitHub Actions
# No need to configure locally
# - DATABASE_URL is set to dummy value for CI builds
# - VERCEL_TOKEN, VERCEL_ORG_ID, VERCEL_PROJECT_ID are GitHub Secrets


# ========================================
# Vercel Deployment (Required for production)
# ========================================
# Set these as Vercel Environment Variables:
# - DATABASE_URL (from Supabase)
# - DIRECT_URL (from Supabase)
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY
# - SUPABASE_SECRET_KEY
# - NEXT_PUBLIC_BASE_URL (e.g., https://your-app.vercel.app)
